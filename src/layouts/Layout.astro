---
import "@/styles/globals.css";
import Footer from "@/components/astro/Footer.astro";
import Analytics from "@/components/astro/Analytics.astro";

interface Props {
  title: string;
}

const { title } = Astro.props;
const isProd = import.meta.env.MODE === "production";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="coolest corner of the internet ðŸ˜Ž" />
    <meta name="viewport" content="width=device-width" />
    <meta name="generator" content={Astro.generator} />

    <title>{title} - crwdzr.io</title>
    {isProd && <Analytics {title} />}
  </head>

  <body class="flex min-h-screen flex-col overflow-y-auto overflow-x-hidden">
    <div class="grow">
      <slot />
    </div>

    <Footer />
  </body>
